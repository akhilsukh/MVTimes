    <!--<style name="Theme.AppCompat.Dark.NoActionBar" parent="AppTheme">-->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
    <!--</style>-->

    <style name="PreferenceScreenLight" parent="Theme.AppCompat">
        <item name="android:textColor">#212121</item>
        <item name="android:textColorPrimary">#616161</item>
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="android:textColorSecondary">#9e9e9e</item>
        <item name="colorAccent">#3F51B5</item>
        <item name="android:background">#FAFAFA</item>
    </style>


    <style name="NavButtons" parent="Theme.AppCompat">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="LinearNavButtons" parent="Theme.AppCompat">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <!--<item name="android:gravity">center</item>-->
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="PreferenceScreenDark" parent="Theme.AppCompat">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="colorPrimary">#aeea00</item>
        <item name="colorPrimaryDark">#212129</item>
        <item name="colorAccent">#47AD82</item>
        <item name="android:background">#212129</item>
    </style>


    <style name="MyMaterialLightTheme" parent="AppTheme">
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColorPrimary">@color/textLight</item>
        <item name="colorBackground">@color/colorBackground</item>

        <item name="rectangleButton">@drawable/rectanglelight</item>
        <item name="settingsIcon">@drawable/ic_settings</item>

        <item name="mon">@drawable/mon</item>
        <item name="tue">@drawable/tue</item>
        <item name="wed">@drawable/wed</item>
        <item name="thur">@drawable/thur</item>
        <item name="rall">@drawable/rall</item>

        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#303F9F</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#90f4f4f4</item>
    </style>


    <style name="MyMaterialDarkTheme" parent="AppTheme">
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->

        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/colorAccent2</item>
        <item name="textColorPrimary">@color/textDark</item>
        <item name="colorBackground">@color/colorBackground2</item>

        <item name="rectangleButton">@drawable/rectangledark</item>
        <item name="settingsIcon">@drawable/ic_settings_dark</item>

        <item name="mon">@drawable/mon_dark</item>
        <item name="tue">@drawable/tue_dark</item>
        <item name="wed">@drawable/wed_dark</item>
        <item name="thur">@drawable/thur_dark</item>
        <item name="rall">@drawable/rall_dark</item>

        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#47ad82</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#90f4f4f4</item>
    </style>




    <style name="Reminder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="ClassesEditText">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_weight">1</item>
    </style>

