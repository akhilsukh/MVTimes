        <!--android:tint="?attr/textColorPrimary"-->
        <!--android:src="@drawable/ic_outline_arrow_drop_up_24px"-->
        <!--android:textSize="15sp" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LinearNavButtons">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_outline_today_24px"
            android:tint="?attr/colorAccent" />

        <Button
            android:id="@+id/buttonBellSchedule"
            style="@style/NavButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BELL SCHEDULES"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LinearNavButtons">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_outline_class_24px"
            android:tint="?attr/colorAccent" />

        <Button
            android:id="@+id/buttonEditClasses"
            style="@style/NavButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLASSES"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@style/LinearNavButtons">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_outline_assignment_24px"
            android:tint="?attr/colorAccent" />

        <Button
            android:id="@+id/buttonAddReminders"
            style="@style/NavButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REMINDERS (beta)"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LinearNavButtons">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_outline_developer_mode_24px"
            android:tint="?attr/colorAccent" />

        <Button
            android:id="@+id/buttonFinalCalc"
            style="@style/NavButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FINALS CALCULATOR"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/LinearNavButtons">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_outline_settings_24px"
            android:tint="?attr/colorAccent" />

        <Button
            android:id="@+id/buttonSettings"
            style="@style/NavButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SETTINGS"/>
    </LinearLayout>
</LinearLayout>